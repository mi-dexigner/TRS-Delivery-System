@model OnlinePostOffice.Models.tbl_services

@{
    ViewBag.Title = "Add New Service";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="card">
    <div class="card-header page-header column">
        <h3>Add New Service</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Services", FormMethod.Post, new { @class = "createservice", @id = "createservice" }))
        {
            @Html.AntiForgeryToken()


            // session user id
            @Html.Hidden("user_id", Session["id"]);
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            // created_at date
            @Html.Hidden("created_at", @DateTime.Now.ToString("M-d-yyyy"));

            // updated_at date
            @Html.Hidden("updated_at", "");

            <table class="form-table" role="presentation">
                <tr class="form-field">
                    <th>
                        @Html.Label("Title", htmlAttributes: new { @class = "" })
                    </th>
                    <td>
                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @id = "title" } })
                        @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                    </td>
                </tr>

            </table>
            <p class="submit"><input type="submit" name="createservice" id="createservice" class="btn" value="Add New Service"></p>
        }

    </div>
</div>
